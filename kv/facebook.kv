
<FacebookKV>:
    FloatLayout:
        TooltipMDIconButton:
            icon:"help-circle"
            tooltip_text: "Search for keywords or hashtags. It is possible to use boolean operators: https://developer.twitter.com/en/docs/twitter-api/tweets/search/integrate/build-a-query"
            font_size: 20
            pos_hint:{"center_x":0.47, "center_y": 0.590}

    FloatLayout:
        TooltipMDIconButton:
            icon:"help-circle"
            tooltip_text: "File will be saved to desktop"
            font_size: 20
            pos_hint:{"center_x":0.97, "center_y": 0.590}
    FloatLayout:
        TooltipMDIconButton:
            icon:"help-circle"
            tooltip_text: "HTML"
            font_size: 20
            pos_hint:{"center_x":0.9,"top":0.940}
            on_press:root.open_page()
    FloatLayout:
        orientation: 'vertical'
        padding: [10,50,10,50]
        size_hint: None, None
        pos_hint: {"center_x": 0.25, "center_y": 0.5} #3-17 div mantığı
        elevation: 10
        spacing: 15





        Label:
            text: '  Facebook Scraper  '
            color: 0.408, 0.741, 1 # <-----------
            font_size: 25
            size_hint:(1, .03)
            pos_hint:{"center_x": 2.9, "top": 3.6}



        Label:
            color: 0.408, 0.741, 1
            id: deneme
            text:""
            pos_hint: {"center_x": 3, "top": -2.3}


        Button:
            text: ""
            background_normal:'image/gericollect.png'
            font_size: 15
            pos_hint:{"center_x": -1, "top": 3.9}
            size_hint:(0.5,0.5)
            on_press: root.disconnect()
        Button:
            text:""
            background_normal:'image/facebook.png'
            pos_hint:{"center_x": 4.2, "top": 3.84}
            size_hint:(0.5,0.5)


        Label:
            text: 'Search for:'
            font_size: 20
            color: 0.408, 0.741, 1
            pos_hint: {"center_x": 0.5, "top": 2.15}

        MDTextField:
            id: search_word
            hint_text: "Example: covid or #COVID19"
            icon_right_color:  0.408, 0.741, 1
            mode: "rectangle"
            multiline:False
            write_tab: False
            font_size: 12
            pos_hint: {"center_x": 0.5, "top": 1.5}
            size_hint:4,0.52

        Button:
            text: ""
            background_normal:"image/search2.png"
            pos_hint: {"center_x": 3, "top": -0.6}
            size_hint:(1,1.3)
            on_press: root.fb_router(search_word.text,filname.text)

   

    #--------------------------------------------------
        Label:
            text: 'Save file name'
            font_size: 20
            color: 0.408, 0.741, 1
            pos_hint: {"center_x": 5.5, "top": 2.15}

        MDTextField:
            id: filname
            hint_text: "any_file"
            mode: "rectangle"
            multiline:False
            font_size: 12
            hint_text: "any_file"
            foreground_color: 0.49, 0.008, 0.008
            pos_hint: {"center_x": 5.5, "top": 1.5}
            size_hint:4,0.52

