#:include connected.kv
#:include googleSearch.kv
#:include googleTopik.kv
#:include bing.kv

<Login>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50
        size_hint: None, None
        size: 500, 650
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 65
        spacing: 35
        orientation: 'vertical'
        Label:
            text: 'Hoşgeldiniz'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Kullanıcı Adı'
                font_size: 28
                size_hint_x: None
                pos_hint: {"center_x": 0.3}
            TextInput:
                id: login
                multiline:False
                font_size: 28
                icon_left: "account-check"
                hint_text: "Username"
                foreground_color: 1, 0, 0
                size_hint_x: None
                width: 300
                font_size: 20
                pos_hint: {"center_x": 0.5}

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Şifre'
                font_size: 28
                size_hint_x: None
                pos_hint: {"center_x": 0.18}


            TextInput:
                id: password
                multiline:False
                font_size: 28
                icon_left: "account-check"
                hint_text: "Password"
                foreground_color: 1, 0, 0
                size_hint_x: None
                width: 300
                font_size: 20
                pos_hint: {"center_x": 0.5}

        Button:
            text: 'Giriş'
            font_size: 24
            on_press: root.do_login(login.text, password.text)